<p><%= link_to portfolio_item.title, portfolio_item_show_path(portfolio_item) %></p>
<p><%= portfolio_item.subtitle %></p>
<p><%= portfolio_item.body%></p>

<p><%= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil? %></p>
<%= link_to "Edit Item", edit_portfolio_item_path(portfolio_item)if logged_in?(:site_admin) %>
<%= link_to 'Destroy', portfolio_item, method: :delete, data: { confirm: 'Are you sure?' }if logged_in?(:site_admin) %>